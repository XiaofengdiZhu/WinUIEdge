<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Edge.WebSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Edge"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <AutoSuggestBox
        Name="box"
        PlaceholderText="输入想要搜索的内容"
        TextChanged="SuggestTextChanged"
        UpdateTextOnSelect="False"
        SuggestionChosen="SuggestionChosen"
        QuerySubmitted="StartToSearch"
        CornerRadius="{x:Bind CornerRadius}"
        FontSize="{x:Bind FontSize}"
        Text="{x:Bind Text}">
        <AutoSuggestBox.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding Text}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Uri}"/>
                </StackPanel>
            </DataTemplate>
        </AutoSuggestBox.ItemTemplate>
    </AutoSuggestBox>
</UserControl>